<div>
	<h3>フォローしている企業</h3>
	<% @follows.each do |follow| %>
	<% company = follow.company %>
		<div>
			<div><%= attachment_image_tag company, :logo, size: '80x80' %></div>
			<h3><%= link_to company.company_name, company_path(company) %></h3>
			<p><%= strip_tags(company.mission_body.to_s).gsub(/[\n]/,"").strip.truncate(120) %></p>
			<div id="follow_btn">
				<%= render 'companies/follow_form', company: company %>
			</div>
		</div>
	<% end %>
</div>