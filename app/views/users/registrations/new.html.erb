<div class="form-container">
  <h2 class="form-title">アカウント登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <section class="form-group clearfix">
      <%= f.label :名前, class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
    </section>

    <section class="form-group clearfix">
      <%= f.label :性別, class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.radio_button :sex, :male, class: "form-check-input" %>
        <%= f.label :男性, class: "form-check-label" %>
        <%= f.radio_button :sex, :female, class: "form-check-input" %>
        <%= f.label :女性, class: "form-check-label" %>
      </div>
    </section>

    <section class="form-group clearfix">
      <%= f.label :生年月日, class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.select :birth_year, options_for_select((1930..2010).to_a.sort!.reverse!), include_blank: true %>
        <%= f.select :birth_month, options_for_select((1..12).to_a), include_blank: true %>
        <%= f.select :birth_day, options_for_select((1..31).to_a), include_blank: true %>
      </div>
    </section>

    <section class="form-group clearfix">
      <%= f.label :メールアドレス, class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
    </section>

    <section class="form-group clearfix" id="border-bottom">
      <%= f.label :パスワード, class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </section>

    <section class="form-group text-center" id="sign-up-success">
      <%= f.submit "登録する", class: "btn btn-success" %>
    </section>
  <% end %>
    <div class="text-center">
      <%= link_to 'Emailでのログインはこちら', new_user_session_path %>
    </div>
</div>




