<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <sapn>名前</sapn>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <sapn>性別</sapn>
    <%= f.radio_button :sex, :male %>
    <%= f.label :男性 %>
    <%= f.radio_button :sex, :female %>
    <%= f.label :女性 %>
  </div>

  <div class="field">
    <span>生年月日</span>
    <%= f.select :birth_year, options_for_select((1930..2010).to_a) %>
    <%= f.select :birth_month, options_for_select((1..12).to_a) %>
    <%= f.select :birth_day, options_for_select((1..31).to_a) %>
  </div>

  <div class="field">
    <span>メールアドレス</span>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <span>パスワード</span>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
