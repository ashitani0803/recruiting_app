<div>
	<%= attachment_image_tag @user, :image, size: "120x120" %>
	<% unless @user.company_id == nil %>
		<span><%= @user.company.company_name %></span>
	<% end %>
	<span><%= @user.created_at.strftime('%Y/%m/%d') %>に登録</span>
</div>
<div>
	<section>
		<h3>紹介文</h3>
		<p><%= @user.introduction %></p>
	</section>
	<section>
		<h3>学歴</h3>
		<p><%= @user.educational_background %></p>
	</section>
	<section>
		<h3>職歴</h3>
		<p><%= @user.work_experience %></p>
	</section>
</div>