<div class="recruit-sidebar">
	<h4>検索条件</h4>
	<%= form_tag search_path, method: :get do %>
		<%= text_field :search_word, '' ,:placeholder => "キーワードで検索" %><br>
		<%= select :recruit, :occupation, Recruit.occupations_i18n.keys.map {|k| [I18n.t("enums.recruit.occupation.#{k}"), k]} %><br>
		<%= select :recruit, :employment_status, Recruit.employment_statuses_i18n.keys.map {|k| [I18n.t("enums.recruit.employment_status.#{k}"), k]} %>
		<h5>特徴</h5>
		<%= collection_select(:feature, :feature_id, Feature.all, :id, :feature) %><br>
		<%= submit_tag "この条件で検索する", :body => nil %>
	<% end %>

</div>

<div>
	<% @recruits.each do |recruit| %>
		<div>
			<%= link_to recruit_path(recruit) do %>
				<div><%= attachment_image_tag recruit, :image, size: '550x200' %></div>
				<span><%= recruit.job_description %></span>
				<h2><%= recruit.title %></h2>
				<p><%= strip_tags(recruit.do.to_s).gsub(/[\n]/,"").strip.truncate(120) %></p>
			<% end %>
		</div>
		<div>
			<%= link_to company_path(recruit.company) do %>
				<%= attachment_image_tag recruit.company, :logo, size: '50x50' %>
				<%= recruit.company.company_name %>
			<% end %>
			<div id="bookmark_btn_<%= recruit.id %>">
				<%= render 'bookmark_form', recruit: recruit, bookmark: @bookmark %>
			</div>
		</div>
	<% end %>
</div>